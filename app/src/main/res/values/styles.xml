<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_dark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/black_dark</item>
        <item name="drawerArrowStyle">@style/BeatBuffActionBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="playerControlButton" />

    <style name="BeatBuffActionBarStyle" parent="Widget.AppCompat.DrawerArrowToggle" >
        <item name="color">@color/orange_dark</item>
    </style>

</resources>
